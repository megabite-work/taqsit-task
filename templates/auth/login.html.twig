{% extends 'base.html.twig' %}

{% block content %}
	<div class="container tm-mt-big tm-mb-big">
		<div class="row">
			<div class="col-12 mx-auto tm-login-col">
				<div class="tm-bg-primary-dark tm-block tm-block-h-auto">
					<div class="row">
						<div class="col-12 text-center">
							{% for message in app.flashes('error') %}
								<p class="text-danger h5">
									{{ message }}
								</p><br>
							{% endfor %}
							<h2 class="tm-block-title mb-4">Sign In</h2>
						</div>
					</div>
					<div class="row mt-2">
						<div class="col-12">
							<form action="{{ path('app_login') }}" method="POST" class="tm-login-form">
								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
								<div class="form-group">
									<label for="email">Email</label>
									<input name="email" type="email" class="form-control validate" id="login" required placeholder="example@gmail.com" value="{{ app.session.get('data').email|default('') }}"/>
								</div>
								<div class="form-group mt-3">
									<label for="password">Password</label>
									<div class="d-flex">
										<input name="password" type="password" class="form-control validate" id="password" required placeholder="********" value="{{ app.session.get('data').password|default('') }}"/>
										<span class="pr-2" style="background-color: #54657d; color:white;">
											<i class="far fa-eye mt-3" style="cursor: pointer;" onclick="document.getElementById('password').getAttribute('type') === 'password' ? document.getElementById('password').setAttribute('type', 'text') : document.getElementById('password').setAttribute('type', 'password');"></i>
										</span>
									</div>
								</div>
								<div class="form-group mt-4">
									<button type="submit" class="btn btn-primary btn-block text-uppercase" id="login_form_btn">
										Sign In
									</button>
								</div>
								<div class="mb-3">
									<h5 class="mt-5 text-center text-warning">Don't have an account yet?</h5>
									<a href="{{ path('app_show_register') }}" class="mt-3 btn btn-primary btn-block text-uppercase">
										Sign Up
									</a>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
